{
    "name": "@jbuncle/webmon-web",
    "version": "1.0.0",
    "description": "Webmon Web Interface",
    "scripts": {
        "ncc": "ncc build ./src/index.ts --out ./dist/",
        "copy-web": "cp -r ./src/web ./dist/web",
        "build": "npm run ncc && npm run copy-web",
        "start": "ts-node src/index.ts ../webmon"
    },
    "dependencies": {
        "@types/morgan": "^1.9.0",
        "express": "^4.17.1",
        "morgan": "^1.10.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.6",
        "@types/node": "^13.13.4",
        "@zeit/ncc": "^0.22.1",
        "ts-node": "^4.1.0",
        "typescript": "^2.9.2"
    }
}
